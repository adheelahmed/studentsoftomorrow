                'const future = free',
                'while(learning)',
                'if(passionate)',
                'export education',
                'import creativity',
                'class Tomorrow',
                'git commit',
                'npm install',
                'chmod +x future'
            ];

            const codeRain = document.getElementById('codeRain');
            
            setInterval(() => {
                const codeLine = document.createElement('div');
                codeLine.className = 'code-line-drop';
                codeLine.textContent = codeStrings[Math.floor(Math.random() * codeStrings.length)];
                codeLine.style.left = Math.random() * 100 + '%';
                codeLine.style.animationDuration = (Math.random() * 8 + 6) + 's';
                codeLine.style.animationDelay = Math.random() * 2 + 's';
                
                codeRain.appendChild(codeLine);
                
                setTimeout(() => {
                    if (codeLine.parentNode) {
                        codeLine.parentNode.removeChild(codeLine);
                    }
                }, 15000);
            }, 800);
        }

        // Start code rain
