    <script>
        let currentFilter = 'all';
        let currentSearch = '';
        let allCards = [];

        function initializeCards() {
            allCards = Array.from(document.querySelectorAll('.portfolio-card'));
        }

        function filterAndSearchCards() {
            const searchTerm = currentSearch.toLowerCase();
            let visibleCount = 0;

            allCards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                const cardCategory = card.getAttribute('data-category').toLowerCase();
                
                const matchesSearch = !searchTerm || cardText.includes(searchTerm);
                const matchesFilter = currentFilter === 'all' || 
                    cardCategory.includes(currentFilter.toLowerCase()) || 
                    (currentFilter === 'web' && (cardCategory.includes('react') || cardCategory.includes('vue') || cardCategory.includes('javascript') || cardCategory.includes('ejs') )) ||
                    (currentFilter === 'mobile' && (cardCategory.includes('react native') || cardCategory.includes('flutter'))) ||
                    (currentFilter === 'ai' && (cardCategory.includes('python') || cardCategory.includes('tensorflow') || cardCategory.includes('scikit'))) ||
                    (currentFilter === 'game' && (cardCategory.includes('unity') || cardCategory.includes('unreal'))) ||
                    (currentFilter === 'api' && (cardCategory.includes('express') || cardCategory.includes('fastapi') || cardCategory.includes('postgresql')));
                
                if (matchesSearch && matchesFilter) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            const grid = document.getElementById('portfolioGrid');
            let noResultsMsg = document.getElementById('no-results');
            
            if (visibleCount === 0) {
                if (!noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.id = 'no-results';
                    noResultsMsg.style.cssText = 'text-align: center; padding: 40px; grid-column: 1 / -1;';
                    noResultsMsg.innerHTML = '<h3>No projects found</h3><p>Try adjusting your search or filters.</p>';
                    grid.appendChild(noResultsMsg);
                }
                noResultsMsg.style.display = 'block';
            } else if (noResultsMsg) {
                noResultsMsg.style.display = 'none';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            initializeCards();

            document.querySelectorAll('.filter-tag').forEach(tag => {
                tag.addEventListener('click', function() {
                    document.querySelector('.filter-tag.active').classList.remove('active');
                    this.classList.add('active');
                    currentFilter = this.getAttribute('data-filter');
                    filterAndSearchCards();
                });
            });

            document.getElementById('searchInput').addEventListener('input', function(e) {
                currentSearch = e.target.value;
                filterAndSearchCards();
            });
        });
    </script>
</body>

